<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddMedication">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="-88dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/medicationExpDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="324dp"
                    android:ems="10"
                    android:hint="Expiration Date"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicationType" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="366dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginEnd="146dp"
                    android:layout_marginBottom="16dp"
                    android:text="ADD MEDICATION"
                    android:textSize="36sp"
                    app:layout_constraintBottom_toTopOf="@+id/medicationName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/saveMedicationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="263dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginEnd="250dp"
                    android:layout_marginBottom="250dp"
                    android:text="Save"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicationQty"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/medicationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginEnd="324dp"
                    android:layout_marginBottom="41dp"
                    android:ems="10"
                    android:hint="Medication Name"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/medicationQty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saveMedicationButton" />

                <EditText
                    android:id="@+id/medicationQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginEnd="324dp"
                    android:layout_marginBottom="58dp"
                    android:ems="10"
                    android:hint="Quantity"
                    android:inputType="number"
                    app:layout_constraintBottom_toTopOf="@+id/medicationType"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicationName" />

                <EditText
                    android:id="@+id/medicationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginEnd="324dp"
                    android:layout_marginBottom="23dp"
                    android:ems="10"
                    android:hint="Medication Type"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/medicationExpDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicationQty" />

                <RadioButton
                    android:id="@+id/activeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="41dp"
                    android:text="Currently Taking?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicationExpDate" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
</layout>